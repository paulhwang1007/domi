{
  "manifest_version": 3,
  "name": "Domi",
  "version": "0.1.0",
  "description": "Effortlessly capture visible areas, save pages, and organize your digital life with Domi's AI-powered second brain.",
  "icons": {
    "16": "domi_icon.png",
    "48": "domi_icon.png",
    "128": "domi_icon.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "cookies",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "domi_icon.png",
        "48": "domi_icon.png",
        "128": "domi_icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "save_page": {
      "suggested_key": {
        "default": "Alt+D",
        "mac": "Alt+D"
      },
      "description": "Save current page to Domi"
    }
  }
}
